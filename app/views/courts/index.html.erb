<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <div class="card card-plain">
      <div class="card-header card-header-primary">
        <h4 class="card-title-mt-0">
          Juzgados
        </h4>
        <p class="card-category">Listado de Juzgados</p>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <th>Nombre</th>
              <th>Jurisdiccion</th>
              <th>Ciudad</th>
              <th>Provincia</th>
              <th colspan="3"></th>
            </thead>
            <tbody>
              <% @courts.each do |court| %>
                <tr>
                  <td><%= court.name %></td>
                  <td><%= court.jurisdiction.name %></td>
                  <td> <%= court.jurisdiction.location.name %> </td>
                  <td> <%= court.jurisdiction.location.city.city_name %> </td>
                  <td><%= link_to 'Show', court %></td>
                  <td>
                    <%= link_to edit_court_path(court) do %>
                      <i class="material-icons">create</i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to court, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class="material-icons">delete</i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

<%= link_to 'Nuevo Juzgado', new_court_path, class: "btn btn-outline-primary" %>
