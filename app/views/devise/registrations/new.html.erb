<div class="row justify-content-md-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title">Sign Up</h4>
        <p class="card-category">Completa el formulario para crear una cuenta</p>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="row justify-content-md-center">
            <div class="col-md-8">
              <div class="form-group">
              <%= f.label :email, class: "bmd-label-floating" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
          </div>  
          <div class="row justify-content-md-center">
            <div class="col-md-8">
              <div class="form-group">
                <%= f.label class: "bmd-label-floating" do %>
                  Password
                  <% if @minimum_password_length %>
                  <span>(<%= @minimum_password_length %> caracteres como m√≠nimo)</span>
                  <% end %>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="row justify-content-md-center">
            <div class="col-md-8">
              <div class="form-group">
                <%= f.label :password_confirmation, class: "bmd-label-floating" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
            </div>
          </div>
          

          <div class="row justify-content-md-center actions">
            <div class="col-md-8">
              <div class="form-group">
                <%= f.submit "Sign up", class: "btn btn-primary float-rigth" %>
                <div class="clearfix"></div>
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



