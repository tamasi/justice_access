<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <div class="card card-plain">
      <div class="card-header card-header-primary">
        <h4 class="card-title-mt-0">
          Abogados
        </h4>
        <p class="card-category">
          Listado de Abogados
        </p>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Apellido</th>
                <th>Licencia</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @attorneys.each do |attorney| %>
                <tr>
                  <td><%= attorney.name %></td>
                  <td> <%= attorney.last_name %> </td>
                  <td><%= attorney.licence %></td>
                  <td><%= link_to 'Show', attorney %></td>
                  <td>
                    <%= link_to edit_attorney_path(attorney) do %>
                      <i class="material-icons">create</i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to attorney, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class="material-icons">delete</i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<br>

<%= link_to 'Nuevo Abogado', new_attorney_path, class:"btn btn-outline-primary btn-lg" %>
